
<% layout('layouts/boilerplate') %> 

  <div class="row">
      <h1 class="text-center">New Curriculum</h1>
      <div class="col-6 offset-3">
        <form action="/curriculum" method="POST" novalidate class="validated-form">
            <div class="mb-3">
                <label for="name" class="form-label">Name</label>
                <input type="text" id="name" name="curriculum[name]" class="form-control" required>
            </div>
            <div class="mb-3">
                <label for="link" class="form-label">Website URL</label>
                <input type="text" id="link" name="curriculum[link]" class="form-control" required>
            </div>
            <div class="mb-3">
                <label for="link" class="form-label">Cathy Duffy Review Link</label>
                <input type="text" id="link" name="curriculum[cdreview]" class="form-control" required>
            </div>
            <div class="mb-2">Which grades are provided? Check all that apply.</div>
            <div class="form-check">
                <input class="form-check-input" type="checkbox" name="curriculum[grades][prek]" id="prek">
                <label class="form-check-label" for="prek">
                  PreK
                </label>
              </div>
              <div class="form-check">
                <input class="form-check-input" type="checkbox" name="curriculum[grades]" value="k" id="k">
                <label class="form-check-label" for="k">
                  K
                </label>
              </div>
              <div class="form-check">
                <input class="form-check-input" type="checkbox" name="curriculum[grades]" value="1" id="1">
                <label class="form-check-label" for="1">
                  1
                </label>
              </div>
              <div class="form-check">
                <input class="form-check-input" type="checkbox" name="curriculum[grades]" value="2" id="2">
                <label class="form-check-label" for="2">
                  2
                </label>
              </div>
              <div class="form-check">
                <input class="form-check-input" type="checkbox" name="curriculum[grades]" value="3" id="3">
                <label class="form-check-label" for="3">
                  3
                </label>
              </div>
              <div class="form-check">
                <input class="form-check-input" type="checkbox" name="curriculum[grades]" value="4" id="4">
                <label class="form-check-label" for="4">
                  4
                </label>
              </div>
              <div class="form-check">
                <input class="form-check-input" type="checkbox" name="curriculum[grades]" value="5" id="5">
                <label class="form-check-label" for="5">
                  5
                </label>
              </div>
              <div class="form-check">
                <input class="form-check-input" type="checkbox" name="curriculum[grades]" value="6" id="6">
                <label class="form-check-label" for="6">
                  6
                </label>
              </div>
              <div class="form-check">
                <input class="form-check-input" type="checkbox" name="curriculum[grades]" value="7" id="7">
                <label class="form-check-label" for="7">
                  7
                </label>
              </div>
              <div class="form-check">
                <input class="form-check-input" type="checkbox" name="curriculum[grades]" value="8" id="8">
                <label class="form-check-label" for="8">
                  8
                </label>
              </div>
              <div class="form-check">
                <input class="form-check-input" type="checkbox" name="curriculum[grades]" value="9" id="9">
                <label class="form-check-label" for="9">
                  9
                </label>
              </div>
              <div class="form-check">
                <input class="form-check-input" type="checkbox" name="curriculum[grades]" value="10" id="10">
                <label class="form-check-label" for="10">
                  10
                </label>
              </div>
              <div class="form-check">
                <input class="form-check-input" type="checkbox" name="curriculum[grades]" value="11" id="11">
                <label class="form-check-label" for="11">
                  11
                </label>
              </div>
              <div class="form-check mb-3">
                <input class="form-check-input" type="checkbox" name="curriculum[grades]" value="12" id="12">
                <label class="form-check-label" for="12">
                  12
                </label>
              </div>
              <div class="mb-3">
                  <label for="howManyRec">How many people recommend? (if not provided leave 1 as default)</label>
                  <input type="number" id="howManyRec" name="curriculum[howManyRec]" class="form-control" value="1" required>
              </div>
              <div class="mb-2">Has the curriculum been used by an accredited institution?</div>
              <div class="form-check">
                <input class="form-check-input" type="radio" name="curriculum[accredited]" id="accreditedY" value="Yes">
                <label class="form-check-label" for="accreditedY">
                  Yes
                </label>
              </div>
              <div class="form-check mb-3">
                <input class="form-check-input" type="radio" name="curriculum[accredited]" id="accreditedN" value="No">
                <label class="form-check-label" for="accreditedN">
                  No
                </label>
              </div>
              <div class="mb-2">How much does it cost? (0-200 $, 201-400 $$, 401-800 $$$, 800+ $$$$)</div>
              <div class="form-check">
                <input class="form-check-input" type="radio" name="curriculum[cost]" value="$" id="cost1">
                <label class="form-check-label" for="cost1">
                  $
                </label>
              </div>
              <div class="form-check">
                <input class="form-check-input" type="radio" name="curriculum[cost]" value="$$" id="cost2">
                <label class="form-check-label" for="cost2">
                  $$
                </label>
              </div>
              <div class="form-check">
                <input class="form-check-input" type="radio" name="curriculum[cost]" value="$$$" id="cost3">
                <label class="form-check-label" for="cost3">
                  $$$
                </label>
              </div>
              <div class="form-check mb-3">
                <input class="form-check-input" type="radio" name="curriculum[cost]" value="$$$$" id="cost4">
                <label class="form-check-label" for="cost4">
                  $$$$
                </label>
              </div>
              <div class="mb-2">What is the curriculum's worldview?</div>
              <div class="form-check">
                <input class="form-check-input" type="radio" name="curriculum[worldview]" value="Secular" id="secular">
                <label class="form-check-label" for="secular">
                  Secular
                </label>
              </div>
              <div class="form-check">
                <input class="form-check-input" type="radio" name="curriculum[worldview]" value="Mennonite" id="mennonite">
                <label class="form-check-label" for="mennonite">
                  Mennonite
                </label>
              </div>
              <div class="form-check mb-3">
                <input class="form-check-input" type="radio" name="curriculum[worldview]" value="Christian" id="christian">
                <label class="form-check-label" for="christian">
                  Christian
                </label>
              </div>
              <div class="mb-2">Is it disability friendly?</div>
              <div class="form-check">
                <input class="form-check-input" type="radio" name="curriculum[disabilityFriendly]" value="Yes" id="disbailityFY">
                <label class="form-check-label" for="disbailityFY">
                  Yes
                </label>
              </div>
              <div class="form-check mb-3">
                <input class="form-check-input" type="radio" name="curriculum[disabilityFriendly]" value="No" id="disabilityFN">
                <label class="form-check-label" for="disabilityFN">
                  No
                </label>
              </div>
              <div class="mb-2">What's the level of teacher involvement?</div>
              <div class="form-check">
                <input class="form-check-input" type="radio" name="curriculum[teacherInvolve]" value="High" id="teacherHigh">
                <label class="form-check-label" for="teacherHigh">
                  High
                </label>
              </div>
              <div class="form-check">
                <input class="form-check-input" type="radio" name="curriculum[teacherInvolve]" value="Mid" id="teacherMid">
                <label class="form-check-label" for="teacherMid">
                  Mid
                </label>
              </div>
              <div class="form-check mb-3">
                <input class="form-check-input" type="radio" name="curriculum[teacherInvolve]" value="Low" id="teacherLow">
                <label class="form-check-label" for="teacherLow">
                  Low
                </label>
              </div>
              <div class="mb-2">What's the curriculum's learning style? Check all that apply.</div>
            <div class="form-check">
                <input class="form-check-input" type="checkbox" name="curriculum[lStyle]" value="V" id="Visual">
                <label class="form-check-label" for="Visual">
                  Visual
                </label>
              </div>
              <div class="form-check">
                <input class="form-check-input" type="checkbox" name="curriculum[lStyle]" value="A" id="Auditory">
                <label class="form-check-label" for="Auditory">
                  Auditory
                </label>
              </div>
              <div class="form-check mb-3">
                <input class="form-check-input" type="checkbox" name="curriculum[lStyle]" value="K" id="Kinetic">
                <label class="form-check-label" for="Kinetic">
                  Kinetic
                </label>
              </div>
              <div class="mb-2">Is the curriculum an all-in-one? Unit based? Supplementary? Or project based? Check all that apply.</div>
            <div class="form-check">
                <input class="form-check-input" type="checkbox" name="curriculum[cType]" value="A" id="allCTypes">
                <label class="form-check-label" for="allCTypes">
                  All-In-One
                </label>
              </div>
              <div class="form-check">
                <input class="form-check-input" type="checkbox" name="curriculum[cType]" value="U" id="unitBased">
                <label class="form-check-label" for="unitBased">
                  Unit Based
                </label>
              </div>
              <div class="form-check">
                <input class="form-check-input" type="checkbox" name="curriculum[cType]" value="P" id="projectBased">
                <label class="form-check-label" for="projectBased">
                  Project Based
                </label>
              </div>
              <div class="form-check mb-3">
                <input class="form-check-input" type="checkbox" name="curriculum[cType]" value="S" id="supplementary">
                <label class="form-check-label" for="supplementary">
                  Supplementary
                </label>
              </div>

              <div class="mb-2">What part of the curriculum is recommended? Check all that apply.</div>
              <div class="form-check">
                <input class="form-check-input" type="checkbox" name="curriculum[recommended]" value="A" id="allRecc">
                <label class="form-check-label" for="allRecc">
                  All
                </label>
              </div>
              <div class="form-check">
                <input class="form-check-input" type="checkbox" name="curriculum[recommended]" value="LA" id="laRecc">
                <label class="form-check-label" for="laRecc">
                  Language Arts
                </label>
              </div>
              <div class="form-check">
                <input class="form-check-input" type="checkbox" name="curriculum[recommended]" value="M" id="mathRecc">
                <label class="form-check-label" for="mathRecc">
                  Math
                </label>
              </div>
              <div class="form-check">
                <input class="form-check-input" type="checkbox" name="curriculum[recommended]" value="S" id="scienceRecc">
                <label class="form-check-label" for="scienceRecc">
                  Science
                </label>
              </div>
              <div class="form-check">
                <input class="form-check-input" type="checkbox" name="curriculum[recommended]" value="H" id="hisRecc">
                <label class="form-check-label" for="hisRecc">
                  History
                </label>
              </div>
              <div class="form-check">
                <input class="form-check-input" type="checkbox" name="curriculum[recommended]" value="P" id="penRecc">
                <label class="form-check-label" for="penRecc">
                  Penmanship/Handwriting
                </label>
              </div>
              <div class="form-check">
                <input class="form-check-input" type="checkbox" name="curriculum[recommended]" value="G" id="geoRecc">
                <label class="form-check-label" for="geoRecc">
                  Geography
                </label>
              </div>
              <div class="form-check">
                <input class="form-check-input" type="checkbox" name="curriculum[recommended][Ar]" id="artRecc">
                <label class="form-check-label" for="artRecc">
                  Art
                </label>
              </div>
              <div class="form-check">
                <input class="form-check-input" type="checkbox" name="curriculum[recommended]" value="Sp" id="spanRecc">
                <label class="form-check-label" for="spanRecc">
                  Spanish
                </label>
              </div>
              <div class="form-check">
                <input class="form-check-input" type="checkbox" name="curriculum[recommended]" value="Fr" id="frenRecc">
                <label class="form-check-label" for="frenRecc">
                  French
                </label>
              </div>
              <div class="form-check mb-3">
                <input class="form-check-input" type="checkbox" name="curriculum[recommended]" value="B" id="bibleRecc">
                <label class="form-check-label" for="bibleRecc">
                  Bible
                </label>
              </div>
              


            <div class="mb-3">
            <button class="btn btn-success">Add Curriculum</button>
            </div>
        </form>
    
      </div>
  </div>

 